---
// src/components/Hero.astro
const { title, subtitle, image } = Astro.props as { title: string; subtitle: string; image?: string };
---

<section class="hero">
  <h1>{title}</h1>
  <p>{subtitle}</p>
  {image && <img src={image} alt="Hero image" />}
</section>

<style>
  .hero {
    text-align: center;
    padding: 2rem;
    background-color: #f4f4f4;
  }
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  p {
    font-size: 1.2rem;
    color: #666;
  }
  img {
    max-width: 100%;
    height: auto;
    margin-top: 1rem;
  }
</style>