---
// src/components/Navbar.astro
const { links } = Astro.props as { links: { text: string; url: string }[] };
---

<nav>
  <ul>
    {links.map((link) => (
      <li><a href={link.url}>{link.text}</a></li>
    ))}
  </ul>
</nav>

<style>
  nav {
    background-color: #333;
    padding: 1rem;
  }
  ul {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }
  a {
    color: white;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
</style>